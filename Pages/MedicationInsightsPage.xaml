<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PillPilot.Pages.MedicationInsightsPage"
    BackgroundColor="#071227">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Medication Insights"
                   FontSize="28"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <FlexLayout x:Name="MedicationContainer"
                        Direction="Row"
                        Wrap="Wrap"
                        AlignItems="Start"
                        JustifyContent="Start" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
