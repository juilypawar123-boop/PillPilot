<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PillPilot.Pages.AlertsPage"
             Title="Alerts"
             BackgroundColor="#071227">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Button Text="Add New Alert" 
                BackgroundColor="#2196F3" 
                TextColor="White" 
                Clicked="OnSetAlertsClicked"
                HorizontalOptions="Center"
                Margin="0,20,0,20"/>

        <CollectionView x:Name="AlertsCollection"
                        ItemsSource="{Binding Alerts}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="10" BorderColor="#ddd" BackgroundColor="YellowGreen" Margin="20,15,40,10">
                        <VerticalStackLayout>
                            <Label Text="{Binding MedicationName}" FontAttributes="Bold" FontSize="16"/>
                            <Label Text="{Binding Purpose}" FontSize="14"/>
                            <Label Text="{Binding Instructions}" FontSize="14" FontAttributes="Italic"/>
                            <Label Text="{Binding StartDate, StringFormat='Start: {0:MMM dd, yyyy}'}" FontSize="12"/>
                            <Label Text="{Binding EndDate, StringFormat='End: {0:MMM dd, yyyy}'}" FontSize="12"/>
                            <Label Text="{Binding AlertTime, StringFormat='Alert Time: {0:hh\\:mm}'}" FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
